{
  "manifest_version": 3,
  "name": "Ideas Nest",
  "version": "1.0",
  "description": "Capture tes id√©es en naviguant sur le web",
  "permissions": ["activeTab", "storage", "contextMenus", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./images/logo.png",
      "32": "./images/logo.png",
      "48": "./images/logo.png",
      "128": "./images/logo.png"
    }
  },
  "icons": {
    "16": "./images/logo.png",
    "32": "./images/logo.png",
    "48": "./images/logo.png",
    "128": "./images/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "option_ui": {
    "page": "./create page/create.html",
    "open_in_tab": true
  }
}
